<!-- server/views/Expenses/list.ejs -->
<%- include ../partials/header.ejs %>
<%- include ../partials/main_nav.ejs %>

<!--Main content-->
<main class="container mt-4">
    <div class="row">
        <div class="col-md-10 offset-md-1">
            <!-- Page Header -->
            <div class="card mb-4" style="background: linear-gradient(135deg, #667eea 0%, #764ba2 100%); color: white;">
                <div class="card-body text-center py-4">
                    <h1 class="display-4 mb-2">
                        <i class="fas fa-receipt"></i> CampusFuel
                    </h1>
                    <p class="lead mb-0">Budget Tracker App</p>
                </div>
            </div>

            <!-- Total Expenses Card -->
            <div class="card mb-4" style="background-color: #d4edda; border-color: #c3e6cb;">
                <div class="card-body text-center">
                    <h3 class="mb-2">All Expenses (Total: $<%= totalExpenses %>)</h3>
                    <a href="/expenses/add" class="btn btn-success btn-lg">
                        <i class="fas fa-plus-circle"></i> Add New Expense
                    </a>
                </div>
            </div>

            <!-- Expenses Table -->
            <div class="card shadow-sm">
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-hover table-bordered">
                            <thead class="table-light">
                                <tr>
                                    <th>Title</th>
                                    <th>Vendor</th>
                                    <th>Cost ($)</th>
                                    <th>Category</th>
                                    <th>Date</th>
                                    <th>Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                <% if(ExpenseList.length > 0) { %>
                                    <% for(let count = 0; count < ExpenseList.length; count++) { %>
                                        <tr>
                                            <td><%= ExpenseList[count].title %></td>
                                            <td><%= ExpenseList[count].vendor %></td>
                                            <td class="text-end">$<%= ExpenseList[count].cost.toFixed(2) %></td>
                                            <td>
                                                <span class="badge bg-info"><%= ExpenseList[count].category %></span>
                                            </td>
                                            <td><%= new Date(ExpenseList[count].date).toLocaleDateString() %></td>
                                            <td>
                                                <div class="btn-group" role="group">
                                                    <a href="/expenses/edit/<%= ExpenseList[count]._id %>" 
                                                       class="btn btn-warning btn-sm">
                                                        <i class="fas fa-edit"></i> Edit
                                                    </a>
                                                    <a href="/expenses/delete/<%= ExpenseList[count]._id %>" 
                                                       class="btn btn-danger btn-sm"
                                                       onclick="return confirm('Are you sure you want to delete this expense?');">
                                                        <i class="fas fa-trash-alt"></i> Delete
                                                    </a>
                                                </div>
                                            </td>
                                        </tr>
                                    <% } %>
                                <% } else { %>
                                    <tr>
                                        <td colspan="6" class="text-center text-muted">
                                            <i class="fas fa-inbox fa-3x mb-3 d-block"></i>
                                            No expenses recorded yet. Click "Add New Expense" to get started!
                                        </td>
                                    </tr>
                                <% } %>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</main>

<br><br>

<%- include ../partials/footer.ejs %>