<!-- server/views/Expenses/list.ejs -->
<%- include ../partials/header.ejs %>
<%- include ../partials/main_nav.ejs %>

<!--Main content-->
<main class="container mt-5 mb-5">
    <div class="row">
        <div class="col-md-10 offset-md-1">
            
            <!-- Page Header -->
            <div class="list-header text-center">
                <h1><i class="fas fa-receipt"></i> All Expenses</h1>
                <div class="total-display">
                    <strong>Total Expenses:</strong> $<%= totalExpenses %>
                </div>
                <div class="mt-3">
                    <a href="/expenses/add" class="btn btn-add">
                        <i class="fas fa-plus-circle"></i> Add New Expense
                    </a>
                </div>
            </div>
            <div class="table-container">
                <div class="table-responsive">
                    <table class="table">
                        <thead>
                            <tr>
                                <th>Title</th>
                                <th>Vendor</th>
                                <th>Cost ($)</th>
                                <th>Category</th>
                                <th>Date</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% if(ExpenseList.length > 0) { %>
                                <% for(let count = 0; count < ExpenseList.length; count++) { %>
                                    <tr>
                                        <td><%= ExpenseList[count].title %></td>
                                        <td><%= ExpenseList[count].vendor %></td>
                                        <td class="text-end">$<%= ExpenseList[count].cost.toFixed(2) %></td>
                                        <td>
                                            <% 
                                            let badgeClass = 'badge-other';
                                            if(ExpenseList[count].category === 'Meal') badgeClass = 'badge-meal';
                                            else if(ExpenseList[count].category === 'Snack') badgeClass = 'badge-snack';
                                            else if(ExpenseList[count].category === 'Drink') badgeClass = 'badge-drink';
                                            %>
                                            <span class="badge <%= badgeClass %>"><%= ExpenseList[count].category %></span>
                                        </td>
                                        <td><%= new Date(ExpenseList[count].date).toLocaleDateString() %></td>
                                        <td>
                                            <a href="/expenses/edit/<%= ExpenseList[count]._id %>" 
                                               class="btn btn-action btn-edit">
                                                <i class="fas fa-edit"></i> Edit
                                            </a>
                                            <a href="/expenses/delete/<%= ExpenseList[count]._id %>" 
                                               class="btn btn-action btn-delete"
                                               onclick="return confirm('Are you sure you want to delete this expense?');">
                                                <i class="fas fa-trash-alt"></i> Delete
                                            </a>
                                        </td>
                                    </tr>
                                <% } %>
                            <% } else { %>
                                <tr>
                                    <td colspan="6">
                                        <div class="empty-state">
                                            <i class="fas fa-inbox"></i>
                                            <p>No expenses recorded yet. Click "Add New Expense" to get started!</p>
                                        </div>
                                    </td>
                                </tr>
                            <% } %>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</main>

<%- include ../partials/footer.ejs %>